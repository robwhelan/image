<h1>Listing contacts</h1>

<table>
  <tr>
    <th>First name</th>
    <th>Last name</th>
    <th>Address 1</th>
    <th>Address 2</th>
    <th>City</th>
    <th>Zip code</th>
    <th>Handle phone</th>
    <th>Handle email</th>
    <th>Handle linked in</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @contacts.each do |contact| %>
  <tr>
    <td><%= contact.first_name %></td>
    <td><%= contact.last_name %></td>
    <td><%= contact.address_1 %></td>
    <td><%= contact.address_2 %></td>
    <td><%= contact.city %></td>
    <td><%= contact.zip_code %></td>
    <td><%= contact.handle_phone %></td>
    <td><%= contact.handle_email %></td>
    <td><%= contact.handle_linked_in %></td>
    <td><%= link_to 'Show', contact %></td>
    <td><%= link_to 'Edit', edit_contact_path(contact) %></td>
    <td><%= link_to 'Destroy', contact, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

